<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>


<!-- Main Content -->
<dib class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1>
                <%= title  %>
            </h1>
            <form class="form" method="post">
                <div class="form-group">
                    <label for="contactName">Contact Name</label>
                    <input type="text" class="form-control" id="nameTextfield" placeholder="Enter Contact Name"
                        name="name" required>
                </div>
                <div class="form-group">
                    <label for="contactNumber">Contact Number</label>
                    <input type="text" class="form-control" id="numberTextField" placeholder="Enter Contact Number"
                        name="number" required>
                </div>
                <div class="form-group">
                    <label for="contactEmail">Contact Email</label>
                    <input type="text" class="form-control" id="emailTextfield" placeholder="Enter Contact Email"
                        name="email" required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-ecit"></i>Submit

                </button>
                <a href="/contact-list" class="btn btn-warning">
                    <i class="fas-fa-undo"></i>Cancel</a>
            </form>



        </div>



    </div>
    </div>

    <%- include ../partials/bottom_nav.ejs %>

    <%- include ../partials/footer.ejs %>